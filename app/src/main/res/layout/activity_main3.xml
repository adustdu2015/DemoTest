<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = "com.demotest.Main3Activity"
	>
<ImageView
	android:id="@+id/main3_image"
	android:layout_width = "200dp"
	android:layout_height = "200dp"
	android:layout_marginTop="30dp"
	android:layout_centerHorizontal="true"
	android:src="@drawable/youtube"
	android:background="@color/colorPrimary"
	/>
	<ImageView
		android:id="@+id/cancel"
		android:layout_width = "20dp"
		android:layout_height = "20dp"
		android:layout_alignRight="@id/main3_image"
		android:layout_alignTop="@id/main3_image"
		android:src="@drawable/cancel"
		android:layout_marginTop="-10dp"
		android:layout_marginRight="-5dp"
		/>
	<EditText
		android:id = "@+id/editText"
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
		android:layout_alignParentStart = "true"
		android:layout_below = "@+id/main3_image"
		android:layout_marginStart = "11dp"
		android:layout_marginEnd="11dp"
		android:layout_marginTop = "14dp"
		android:inputType = "number"
		android:hint="@string/app_name"
		android:background="@drawable/tv_bg"
		android:cursorVisible="true"
		android:textColorHint="#95A1AA"
		android:selectAllOnFocus="true"
		android:textColor="#333333"
		/>
	<LinearLayout
		android:layout_width = "match_parent"
		android:layout_height = "290dp"
		android:layout_alignParentBottom="true"
		>
		<com.heima.tabview.library.TabView
			android:id="@+id/tabView"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		</com.heima.tabview.library.TabView>
	</LinearLayout>
</RelativeLayout>
