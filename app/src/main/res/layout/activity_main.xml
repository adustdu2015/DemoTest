<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demotest.MainActivity">
	
   <LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		tools:layout_constraintTop_creator = "1"
		tools:layout_constraintRight_creator = "1"
		app:layout_constraintRight_toRightOf = "parent"
		tools:layout_constraintLeft_creator = "1"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		android:id = "@+id/linearLayout"
		>
	
		<android.support.v7.widget.Toolbar
			android:id = "@+id/toolbar"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:background = "?attr/colorPrimary"
			android:minHeight = "?attr/actionBarSize"
			android:theme = "?attr/actionBarTheme"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
			>
			<ImageView
				android:id="@+id/iv_next"
				android:layout_width = "30dp"
				android:layout_height = "30dp"
				android:layout_gravity="right"
				android:src="@drawable/ic_search_white_36dp"
				android:layout_marginRight="14dp"
				/>
		</android.support.v7.widget.Toolbar>
		<android.support.v4.widget.NestedScrollView
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_marginBottom="0dp"
			>
		
			<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:orientation = "vertical"
				>
				<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "wrap_content"
					android:orientation="horizontal"
					>
					<Button
						android:id="@+id/showIn"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text="展示indicator"
						android:textAllCaps="false"
						android:clickable="true"
						android:focusable="true"
						android:background="#ffffff"
						/>
					<Button
						android:id="@+id/hideIn"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text="隐藏indicator"
						android:textAllCaps="false"
						android:background="#ffffff"
						android:layout_marginLeft="20dp"
						/>
				</LinearLayout>
				
				<com.wang.avi.AVLoadingIndicatorView
					android:id="@+id/avi"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/AVLoadingIndicatorView"
					android:visibility="gone"
					app:indicatorName="LineScalePartyIndicator"
					app:indicatorColor="#333333"
					/>


				<EditText
					android:id = "@+id/main_edit"
					android:layout_width = "match_parent"
					android:layout_height = "wrap_content"
					android:layout_marginStart = "11dp"
					android:layout_marginEnd="11dp"
					android:layout_marginTop = "14dp"
					android:inputType = "text"
					android:hint="输入城市"
					android:background="@drawable/tv_bg"
					android:cursorVisible="true"
					android:textColorHint="#95A1AA"
					android:selectAllOnFocus="true"
					android:textColor="#333333"
					/>
				<Button
					android:id="@+id/weath"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:text="OkGo实现和风天气情况"
					android:textAllCaps="false"
					/>
				<TextView
					android:id="@+id/status"
					android:layout_width = "wrap_content"
					android:layout_height = "0dp"
					android:text="@string/info"
					android:layout_weight = "1"
					android:layout_marginTop="10dp"
					/>
				<Button
					android:id="@+id/btn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/look_log"
					android:textColor="#0076ff"
					android:background="#f2f2f2"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					
					/>
				
				<ImageView
					android:id = "@+id/photo_view"
					android:layout_width = "100dp"
					android:layout_marginBottom="30dp"
					android:layout_marginTop="20dp"
					android:layout_height = "100dp"
					android:src="@drawable/animation1"
					/>
				<Button
					android:id="@+id/frame"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:text="逐帧动画"
					/>
				
			</LinearLayout>
		</android.support.v4.widget.NestedScrollView>
		<android.support.design.widget.FloatingActionButton
			android:id="@+id/fab"
			android:layout_width = "60dp"
			android:layout_height = "60dp"
			android:layout_gravity="right|end"
			android:src="@drawable/explore"
			android:background="@null"
			app:elevation="4dp"
			android:layout_marginRight="10dp"
			android:layout_marginEnd="10dp"
			/>
	</LinearLayout>
	
</android.support.constraint.ConstraintLayout
    >
