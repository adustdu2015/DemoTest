<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demotest.MainActivity">
	
   <LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		tools:layout_constraintTop_creator = "1"
		tools:layout_constraintRight_creator = "1"
		app:layout_constraintRight_toRightOf = "parent"
		tools:layout_constraintLeft_creator = "1"
		app:layout_constraintLeft_toLeftOf = "parent"
		app:layout_constraintTop_toTopOf = "parent"
		android:id = "@+id/linearLayout"
		>
	
		<android.support.v7.widget.Toolbar
			android:id = "@+id/toolbar"
			android:layout_width = "match_parent"
			android:layout_height = "wrap_content"
			android:background = "?attr/colorPrimary"
			android:minHeight = "?attr/actionBarSize"
			android:theme = "?attr/actionBarTheme"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
			>
			<ImageView
				android:id="@+id/img_share"
				android:layout_width = "30dp"
				android:layout_height = "30dp"
				android:layout_gravity="right"
				android:src="@drawable/share"
				android:layout_marginRight="18dp"
				/>
		</android.support.v7.widget.Toolbar>
		<android.support.v4.widget.NestedScrollView
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:layout_marginBottom="0dp"
			android:paddingBottom="10dp"
			>
		
			<LinearLayout
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:orientation = "vertical"
				>
				<Button
					android:id="@+id/show_dialog"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/look_log"
					android:textColor="#0076ff"
					android:background="#f2f2f2"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="10dp"
					
					/>

				<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "wrap_content"
					android:orientation="horizontal"
					android:padding="10dp"
					>
					<Button
						android:id="@+id/img_setting"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						android:text="retrofit的使用"
						android:fontFamily="sans-serif"
						android:textColor="#0076ff"
						android:background="#f2f2f2"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						/>
					
					<ImageView
						android:id="@+id/more_image"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginLeft="20dp"
						android:src="@android:drawable/ic_menu_edit"
						android:layout_centerInParent="true"
						android:padding="10dp"
						android:background="@android:color/holo_blue_dark"/>
					
					<Button
						android:id = "@+id/button7"
						android:layout_width = "98dp"
						android:layout_height = "wrap_content"
						android:text = "显示加载条"
						android:background="@drawable/actionbar_btn_auto"
						android:textColor="#0076ff"
						android:paddingLeft="10dp"
						android:layout_marginLeft="10dp"
						android:paddingRight="10dp"
						android:typeface="serif"
						/>
					
				</LinearLayout>
				<TextView
					android:id="@+id/temp"
					android:layout_width = "wrap_content"
					android:layout_height = "0dp"
					android:text="@string/info"
					android:layout_weight = "1"
					android:layout_marginTop="10dp"
					/>
				<Button
					android:id = "@+id/button6"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:layout_marginLeft = "8dp"
					android:layout_marginRight = "8dp"
					android:layout_marginTop = "9dp"
					android:text = "QMUIDialog"
					android:textColor = "@color/text_color"
					app:layout_constraintHorizontal_bias = "0.248"
					app:layout_constraintLeft_toRightOf = "@+id/button5"
					app:layout_constraintRight_toRightOf = "parent"
					app:layout_constraintTop_toBottomOf = "@+id/linearLayout"
					
					/>
				
			
				<Button
					android:id="@+id/rx"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:text="使用RxPression"
					android:textAllCaps="false"
					android:textColor="@color/text_color"
					/>
				<LinearLayout
					android:layout_width = "match_parent"
					android:layout_height = "wrap_content"
					android:orientation="horizontal"
					>
					<Button
						android:id="@+id/weath"
						android:layout_width = "wrap_content"
						android:layout_height = "wrap_content"
						
						android:text="OkGo实现和风天气情况"
						android:textColor="@color/text_color"
						android:textAllCaps="false"
						/>
				</LinearLayout>
				
				<Button
					android:id="@+id/showIn"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:textColor="@color/text_color"
					android:text="展示indicator"
					/>
				<Button
					android:id="@+id/hideIn"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:textColor="@color/text_color"
					android:text="隐藏indicator"
					
					/>
				<com.wang.avi.AVLoadingIndicatorView
					android:id="@+id/avi"
					android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/AVLoadingIndicatorView"
				android:visibility="invisible"
				app:indicatorName="LineScalePartyIndicator"
				app:indicatorColor="#333333"
					android:layout_marginBottom="20dp"
				/>
				<com.balysv.materialripple.MaterialRippleLayout
					android:layout_width="wrap_content"
					app:mrl_rippleColor="#4bc0c3"
					android:layout_height="wrap_content">
					
					<ImageView
						android:id="@+id/more"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/wordpress"
						/>
				
				</com.balysv.materialripple.MaterialRippleLayout>
				
				
				<android.support.design.widget.FloatingActionButton
					android:id="@+id/fab"
					android:layout_width = "65dp"
					android:layout_height = "65dp"
					android:layout_gravity="end|bottom"
					android:src="@drawable/explore_48dp"
					android:background="@null"
					app:elevation="4dp"
					android:layout_marginBottom="16dp"
					android:layout_marginRight="16dp"
					/>
				
			</LinearLayout>
		</android.support.v4.widget.NestedScrollView>

	</LinearLayout>
	
	

</android.support.constraint.ConstraintLayout
    >
